@using Online_book_shop.Models;
@using Online_book_shop.Models.ViewModel;
@using ImageResizer.Resizing;
@using Online_book_shop.Handlers.Business;
@using Newtonsoft.Json;
@{
    ViewBag.Title = "Muses Site Top Navigation";
    Layout = null;
    string current= ViewBag.MenuString;
   /// List<MenuItem> menus = JsonConvert.DeserializeObject<List<MenuItem>>(t);//BusinessHandlerConfigurations.GetHomeNavigationMenus();
    
   
}

<html lang="en">
<head>

    <link href="~/Content/jQueryMenuEditor/bootstrap.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" />*@
    <link href="~/Content/jQueryMenuEditor/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/jQueryMenuEditor/bootstrap-iconpicker/css/bootstrap-iconpicker.min.css">
</head>
<body>


    <div class="container">
        <div class="col-lg-12 row">
            <h1>Muses Site Top Navigation</h1>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header bg-danger">
                        <h5 class="float-left">Menu</h5>
                        @*<div class="float-right">
                                <button id="btnReload" type="button" class="btn btn-outline-secondary">
                                    <i class="fa fa-play"></i> Load Data
                                </button>
                            </div>*@
                    </div>
                    <div class="card-body">
                        <ul id="myEditor" class="sortableLists list-group">
                        </ul>
                    </div>
                </div>
                @*<p>Click the Output button to execute the function <code>getString();</code></p>*@
                <form action="/Configuration/UpdateNavigation" method="post">
                    <div class="card">
                        <div class="card-header bg-danger">
                            JSON Output
                            <div class="float-right">
                                <button id="btnOutput" type="button" class="btn btn-success"><i class="fas fa-check-square"></i> Output</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <textarea id="out" name="jsonString" class="form-control" cols="50" rows="10">@current</textarea>
                            </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Save Changes" />

                    </div>
                </form>

            </div>
            <div class="col-md-6">
                <div class="card border-primary mb-3">
                    <div class="card-header bg-danger text-white">Edit item</div>
                    <div class="card-body">
                        <form id="frmEdit" class="form-horizontal">
                            <div class="form-group">
                                <label for="text">Text</label>
                                <div class="input-group">
                                    <input type="text" class="form-control item-menu" name="text" id="text" placeholder="Text">
                                    <div class="input-group-append">
                                        <button type="button" id="myEditor_icon" class="btn btn-outline-secondary"></button>
                                    </div>
                                </div>
                                <input type="hidden" name="icon" class="item-menu">
                            </div>
                            <div class="form-group">
                                <label for="href">URL</label>
                                <input type="text" class="form-control item-menu" id="href" name="href" placeholder="URL">
                            </div>
                            <div class="form-group">
                                <label for="target">Target</label>
                                <select name="target" id="target" class="form-control item-menu">
                                    <option value="_self">Self</option>
                                    <option value="_blank">Blank</option>
                                    <option value="_top">Top</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="title">Local Title</label>
                                <input type="text" name="title" class="form-control item-menu" id="title" placeholder="Local Title">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <button type="button" id="btnUpdate" class="btn btn-primary" disabled><i class="fas fa-sync-alt"></i> Update</button>
                        <button type="button" id="btnAdd" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @*<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>*@
    @*<script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>*@
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/jQueryMenuEditor/jquery-menu-editor.min.js"></script>
    <script src="~/Content/jQueryMenuEditor/bootstrap-iconpicker/js/iconset/fontawesome5-3-1.min.js"></script>
    <script src="~/Content/jQueryMenuEditor/bootstrap-iconpicker/js/bootstrap-iconpicker.min.js"></script>
    <script src="~/Content/jQueryMenuEditor/menueditor.js"></script>
</body>
</html>