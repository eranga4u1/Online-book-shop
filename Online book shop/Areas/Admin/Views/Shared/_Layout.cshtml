@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Content/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Content/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link rel="icon" href="~/Content/images/logo_uXb_icon.ico">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    @*<link rel="stylesheet" href="/resources/demos/style.css">*@
    <link href="~/Scripts/DatePicker/css/datepicker.css" rel="stylesheet" />
    <script src="~/Scripts/Chart.js"></script>
    @*<link rel="stylesheet" href="/resources/demos/style.css">*@
    <style>
        .nav-item {
            color: white;
        }

        .dropdown-menu {
            background-color: #d71923;
        }

            .dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus {
                color: #262626;
                text-decoration: none;
                background-color: #c57575;
            }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse col-lg-12" style="background-color: #d71923">
        <div class="container-fluid">
            <div class="navbar-header">
                <img src="/Content/SiteImages/logo.png">
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/Admin/Dashboard"><strong class="nav-item">DashBoard</strong></a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <strong class="nav-item">Catalog</strong>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Admin/book"><strong class="nav-item">Books</strong></a></li>
                        <li><a href="/Admin/author"><strong class="nav-item">Authors</strong></a></li>
                        <li><a href="/Admin/publisher"><strong class="nav-item">Publisher</strong></a></li>
                        <li><a href="/Admin/category"><strong class="nav-item">Category</strong></a></li>
                        <li><a href="/Admin/ManageUserReviews"><strong class="nav-item">User Reviews</strong></a></li>
                        <li><a href="/Admin/article"><strong class="nav-item">Articles</strong></a></li>
                    </ul>
                </li>
                @*<li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <strong class="nav-item">Localization</strong>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">

                        </ul>
                    </li>*@
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <strong class="nav-item">Sales</strong>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @{
                            string default_endDt = DateTime.UtcNow.AddHours(5.5).ToString("yyyy-MM-dd HH:mm:ss");
                            string default_startDt = DateTime.UtcNow.AddHours(5.5).AddDays(-7).ToString("yyyy-MM-dd HH:mm:ss");
                        }
                        <li><a href="/Admin/Order/GetAll?deliveryStatus=-1&OrderType=-1&StartDate=@default_startDt&EndDate=@default_endDt"><strong class="nav-item">Orders</strong></a></li>
                        <li><a href="/admin/promotion/"><strong class="nav-item">Promotions</strong></a></li>
                        <li><a href="/admin/Voucher/"><strong class="nav-item">Vouchers</strong></a></li>
                        <li><a href="/admin/Stat/SaleStat"><strong class="nav-item">sale statistics</strong></a></li>

                        @*<li><a href="/Admin/Configuration"><h5 class="nav-item">Articles</h5></a></li>*@
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <strong class="nav-item">Customer</strong>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><strong class="nav-item">Customer Groups</strong></a></li>
                        <li><a href="#"><strong class="nav-item">Customer Approvel</strong></a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <strong class="nav-item">Reports</strong>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Admin/Report/Stocks"><strong class="nav-item">All Stocks</strong></a></li>
                        <li><a href="/Admin/Report/Stocks?type=out"><strong class="nav-item">Out Of Stocks</strong></a></li>
                        <li><a href="#"><strong class="nav-item">Statistics</strong></a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <strong class="nav-item">
                            Sytem
                        </strong>
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Admin/Dashboard/Home"><strong class="nav-item">Basic Site Configurations</strong></a></li>
                        <li><a href="/Admin/Configuration/Localization"><strong class="nav-item">Manage Site Custom Settings</strong></a></li>
                        <li><a href="/Admin/Configuration/UpdateDeliveryCharges"><strong class="nav-item">Delivery Charges</strong></a></li>
                        <li><a href="/Admin/SaleStatus"><strong class="nav-item">Manage Sale Type</strong></a></li>
                        <li><a href="/Admin/DeliverStatus"><strong class="nav-item">Manage Delivery Status</strong></a></li>
                        <li><a href="/Admin/Configuration/District"><strong class="nav-item">Manage Sri Lanka District</strong></a></li>
                        <li><a href="/Admin/Content"><strong class="nav-item">Content Pages</strong></a></li>
                        <li><a href="#"><strong class="nav-item">Users</strong></a></li>
                    </ul>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @if (Request.IsAuthenticated)
                                    {
                        <a href="/Account/LogOff" class="nav-item">
                            <i class="glyphicon glyphicon-log-in text-light"></i>(@User.Identity.GetUserName()) <h4 class="text-light">LOGOUT</h4>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand" href="#">
                            <img src="~/Content/SiteImages/logo.png" />
                        </a>
                    }
                    @*<a href="#"><h4><span></span> Logout</a></h4>*@
                </li>
            </ul>
        </div>
    </nav>
    <div class="col-lg-12">
        @RenderBody()
        <hr />
        <footer>
            <p>Muses Publishers &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <!-- JQUERY SCRIPTS -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    @*<script src="~/Content/assets/js/jquery-1.10.2.js"></script>*@
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/DatePicker/js/moment.min.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Content/assets/js/custom.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/AdminScript.js"></script>
    <script src="~/Content/jQueryMenuEditor/jquery-menu-editor.js"></script>
    <script src="~/Content/jQueryMenuEditor/bootstrap-iconpicker/js/iconset/fontawesome5-3-1.min.js"></script>
    <script src="~/Content/jQueryMenuEditor/bootstrap-iconpicker/js/bootstrap-iconpicker.min.js"></script>
    <script src="~/Scripts/multiple_image_uploader.js"></script>
    <script src="~/Scripts/DatePicker/js/datepicker.all.js"></script>
    <script src="~/Scripts/DatePicker/js/datepicker.en.js"></script>
    <script src="~/Scripts/DatePicker/js/DatePickerCustomScript.js"></script>

</body>
</html>