
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
<h2>Create Content Page</h2>

<form id="form-add-content-page" method="post" action="/Admin/Content/Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" id="Title" name="Title" placeholder="Title">
    </div>
    <div class="form-group">
        <label>URL Substring</label>
        <input type="text" class="form-control" id="URLSubString" name="URLSubString" placeholder="URL Substring">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea type="text" class="form-control" id="HTMLContent" name="HTMLContent" placeholder="HTML Content"></textarea>
        <script>
            CKEDITOR.replace('HTMLContent');
        </script>
    </div>
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>