@using Online_book_shop.Models;
@using Online_book_shop.Handlers.Business;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<Article> articles = ViewBag.Articles;
    double timeOffset = BusinessHandlerConfigurations.GetTimeOffSet();
}

<h1>Articles</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3" scope="col"><input class="col-lg-12" id="searchInput" type="text" placeholder="Search.."></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"><a href="/Admin/Article/Create" class="btn btn-info">New Article</a></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">Article Id</th>
            <th scope="col">Title</th>
            <th scope="col">Created date</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Article article in articles)
        {
            <tr class="author-card">
                <th scope="row">@article.Id</th>
                <td>@article.Title</td>
                <td>@article.CreatedDate.AddHours(timeOffset).ToString("yyyy/MM/dd h:mm tt")</td>
                <td>
                    <a href="/Admin/Article/Edit/@article.Id" class="btn-sm btn-info">Edit</a>
                    @if (article.isDeleted)
                    {
                        <a href="/Admin/Article/ShowItem/@article.Id" class="btn-sm btn-warning">Show In Site</a>
                    }
                    else
                    {
                        <a href="/Admin/Article/HideItem/@article.Id" class="btn-sm btn-danger">Hide From Site</a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>