
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<string> district =ViewBag.District;
    //district.OrderBy(x=>x).ToList();
}

<h2>District - Sri Lanka</h2>

<div class="panel panel-primary">
    <div class="panel-heading">District</div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        <input class="col-lg-12" id="searchInput" type="text" placeholder="Search..">
                    </th>
                    <th></th>
                </tr>               
            </thead>
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Operations</th>
                </tr>
            </thead>
            <tbody>

                @if (district != null)
                    {
                        int index = 0;
                        foreach (string item in district)
                        {

                        <tr class="author-card">
                            <td scope="col">
                                <span style="display:none;">@item</span> 
                                <input class="form-control added-district" id="d_@index" type="text" value="@item" data-old-value="@item" />
                            </td>
                            <td scope="col">
                                <button class="btn btn-danger btn-sm update-distric" data-id="@index" >Update</button>
                                <button class="btn btn-danger btn-sm rmv-distric" data-id="@index" >Remove</button>
                            </td>
                        </tr>
                        index = index + 1;
                        }
                }
                <tr>
                    <td scope="col">
                        <input class="form-control " id="new-district" type="text" value="" />
                    </td>

                    <td scope="col">
                        <button class="btn btn-info btn-sm add-new-district" data-type="contact_numbers">Add New</button>
                    </td>
                </tr>

            </tbody>
        </table>

    </div>
</div>
