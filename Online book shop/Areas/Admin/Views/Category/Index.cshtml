@using Online_book_shop.Models;
@using Online_book_shop.Handlers.Business;
@{
    ViewBag.Title = "Index";
    List<Category> categories = ViewBag.Categories;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    double timeOffset = BusinessHandlerConfigurations.GetTimeOffSet();
}
<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3" scope="col"><input class="col-lg-12" id="searchInput" type="text" placeholder="Search.."></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"><a href="/Admin/Category/AddCategory" class="btn btn-info">New Category</a></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">Category Id</th>
            <th scope="col">Name</th>
            <th scope="col">Created date</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in categories)
        {
            <tr class="author-card">
                <th scope="row">@category.Id</th>
                <td>@category.CategoryName</td>
                <td>@category.CreatedDate.AddHours(timeOffset).ToString("yyyy/MM/dd h:mm tt")</td>
                <td>
                    <a href="/Admin/Category/EditCategory/@category.Id" class="btn-sm btn-info">Edit</a>
                    @if (category.isDeleted)
                    {
                        <a href="/Admin/Category/ShowItem/@category.Id" class="btn-sm btn-warning">Show In Site</a>
                    }
                    else
                    {
                        <a href="/Admin/Category/HideItem/@category.Id" class="btn-sm btn-danger">Hide From Site</a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>
