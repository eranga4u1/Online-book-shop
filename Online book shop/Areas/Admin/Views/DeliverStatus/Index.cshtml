@using Online_book_shop.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<DeliverStatus> list = ViewBag.DeliverStatus;
}
<h2>Sale Types</h2>
<table class="table">
    <thead>
        <tr>
            <th  scope="col"><input class="col-lg-12" id="searchInput" type="text" placeholder="Search.."></th>
            <th scope="col"><a href="/Admin/DeliverStatus/Add" class="btn btn-xs btn-info">New Type</a></th>
            @if (Request.QueryString["hidden"] != null && Request.QueryString["hidden"] == "true")
            {
                <th scope="col"><a href="/Admin/DeliverStatus" class="btn btn-xs btn-warning">Hide hidden Types</a></th>
            }
            else
            {
                <th scope="col"><a href="/Admin/DeliverStatus?hidden=true" class="btn btn-xs btn-info">Show hidden Types</a></th>
            }

        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Display Text</th>
            <th scope="col">Operations</th>

        </tr>
    </thead>
    <tbody>
        @foreach (DeliverStatus saleStatus in list)
        {
            <tr class="author-card">
                <td scope="row">@saleStatus.Id</td>

                <td>@saleStatus.DisplayText</td>
                <td>
                    <a href="/Admin/DeliverStatus/edit/@saleStatus.Id" class="btn-xs btn-info">Edit</a>
                    <a href="/Admin/DeliverStatus/delete/@saleStatus.Id" class="btn-xs btn-danger">Delete</a>

                    @*@if (saleStatus.isDeleted)
        {
            <a href="/Admin/SaleStatus/ShowItem/@saleStatus.Id" class="btn-xs btn-warning">Show In Site</a>
        }
        else
        {
            <a href="/Admin/SaleStatus/HideItem/@saleStatus.Id" class="btn-xs btn-danger">Hide From Site</a>
        }*@
                </td>
            </tr>
        }

    </tbody>
</table>

