
@using Online_book_shop.Models;
@using Online_book_shop.Handlers.Business;
@{
    ViewBag.Title = "Index";
    List<Publisher> Publishers = ViewBag.Publishers;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    double timeOffset = BusinessHandlerConfigurations.GetTimeOffSet();
}
<h1>Publishers</h1>

<table class="table">
    <thead>
        <tr>
            <th colspan="3" scope="col"><input class="col-lg-12" id="searchInput" type="text" placeholder="Search.."></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"><a href="/Admin/Publisher/CreatePublisher" class="btn btn-info">New Publisher</a></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">Publisher Id</th>
            <th scope="col">Name</th>
            <th scope="col">Created date</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Publisher Publisher in Publishers)
        {
            <tr class="author-card">
                <th scope="row">@Publisher.Id</th>
                <td>@Publisher.Name</td>
                <td>@Publisher.CreatedDate.AddHours(timeOffset).ToString("yyyy/MM/dd h:mm tt")</td>
                <td>
                    <a href="/Admin/Publisher/EditPublisher/@Publisher.Id" class="btn-sm btn-info">Edit</a>
                    @if (Publisher.isDeleted)
                    {
                        <a href="/Admin/Publisher/ShowItem/@Publisher.Id" class="btn-sm btn-warning">Show In Site</a>
                    }
                    else
                    {
                        <a href="/Admin/Publisher/HideItem/@Publisher.Id" class="btn-sm btn-danger">Hide From Site</a>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>


