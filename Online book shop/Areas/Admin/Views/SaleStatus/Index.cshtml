@using Online_book_shop.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<SaleStatus> list = ViewBag.SaleStatus;
}
<h2>Sale Types</h2>
<table class="table">
    <thead>
        <tr>
            <th colspan="2" scope="col"><input class="col-lg-12" id="searchInput" type="text" placeholder="Search.."></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"><a href="/Admin/SaleStatus/Add" class="btn btn-xs btn-info">New Type</a></th>
            @if (Request.QueryString["hidden"] != null && Request.QueryString["hidden"] == "true")
            {
                <th scope="col"><a href="/Admin/SaleStatus" class="btn btn-xs btn-warning">Hide hidden Types</a></th>
            }
            else
            {
                <th scope="col"><a href="/Admin/SaleStatus?hidden=true" class="btn btn-xs btn-info">Show hidden Types</a></th>
            }

        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">ID</th>

            <th scope="col">Display Text</th>
            <th scope="col">Background Color</th>
            <th scope="col">Font Color</th>
            <th scope="col">Cart</th>
            <th scope="col">Operations</th>

        </tr>
    </thead>
    <tbody>
        @foreach (SaleStatus saleStatus in list)
        {
        <tr class="author-card">
            <td scope="row">@saleStatus.Id</td>


            <td>@saleStatus.DisplayText</td>
            <td>@saleStatus.BackGroundColor</td>
            <td>@saleStatus.ForeColor</td>
            <td>@(saleStatus.isAddToCartEnables?"Enable":"Dissabled")</td>
            <td>
                @if (saleStatus.Title == "pre_order" || saleStatus.Title == "normal_sale")
                {
                    <a href="/Admin/SaleStatus/edit/@saleStatus.Id" class="btn-xs btn-info">Edit</a>
                    <span>Delete Dissabled</span>
                }
                else
                {
                    <a href="/Admin/SaleStatus/edit/@saleStatus.Id" class="btn-xs btn-info">Edit</a>
                    <a href="/Admin/SaleStatus/delete/@saleStatus.Id" class="btn-xs btn-danger">Delete</a>
                }

                @*@if (saleStatus.isDeleted)
        {
            <a href="/Admin/SaleStatus/ShowItem/@saleStatus.Id" class="btn-xs btn-warning">Show In Site</a>
        }
        else
        {
            <a href="/Admin/SaleStatus/HideItem/@saleStatus.Id" class="btn-xs btn-danger">Hide From Site</a>
        }*@
            </td>
        </tr>
        }

    </tbody>
</table>

