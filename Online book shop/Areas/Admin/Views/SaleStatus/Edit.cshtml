@using Online_book_shop.Models;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    SaleStatus obj = ViewBag.SaleStatus;
    }

<form id="form-add-category" method="post" action="/Admin/SaleStatus/Edit" enctype="multipart/form-data">
    <input type="hidden"  name="Id" value="@obj.Id"/>
    <div class="form-group">
        <label>Display Title</label>
        <input type="text" value="@obj.DisplayText" class="form-control" id="DisplayText" name="DisplayText" placeholder="Display Text">
    </div>
    <div class="form-group">
        <label>Background Color</label>
        <input type="text" class="form-control" value="@obj.BackGroundColor"  id="BackGroundColor" name="BackGroundColor" placeholder="Background Color">
    </div>
    <div class="form-group">
        <label>Font Color</label>
        <input type="text" class="form-control" value="@obj.ForeColor"  id="ForeColor" name="ForeColor" placeholder="Fore Color" />
    </div>
    <div class="form-group">
        <label>Cart Enable</label>
        <div class="select">
            <select id="isAddToCartEnables" class="form-control" name="isAddToCartEnables">
                <option @(obj.isAddToCartEnables?"selected":"") value="True">Enable</option>
                <option  @(!obj.isAddToCartEnables?"selected":"") value="False">Dissable</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
